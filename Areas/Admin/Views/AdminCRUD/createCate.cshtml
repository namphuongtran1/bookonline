
@{
    ViewBag.Title = "createCate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .frmauthor {
        font-family: serif;
    }

    .btncreate {
        background-color: red;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }

    table {
        text-align: center;
    }

    th {
        color: white;
        background-color: #17aa67;
    }
</style>
<script>
    function validateCreate() {
        var x = document.forms["myForm"]["CateName"].value;
        var y = document.forms["myForm"]["Description"].value;

        if (x == "" || y == "") {
            alert("Vui lòng điền đầy đủ thông tin sách trước khi tạo !");
            return false;
        }
    }

</script>
<link href="~/Content/CreateAll.css" rel="stylesheet" />
<h4 style="font-family:serif">Category</h4>
<hr />
<form action="/Admin/AdminCRUD/createCate" method="post" name="myForm">
    <form class="frmauthor">
        <div class="context">
            <div class="text_left_author">
                <p style="font-weight:bold;font-size:20px; font-family:serif">Directory Information</p>
                <table class="table_Author">
                    <tr>
                        <td>

                            <input type="text" name="CateName" placeholder="Name List">

                        </td>

                    </tr>
                    <tr>
                        <td><input type="text" name="Description" placeholder="Describe" /></td>
                    </tr>

                </table>
                <br />




                <div>
                    <a href="@Url.Action("Index","AdminCRUD")" class="btncreate"> Back</a>

                    <input type="submit" class="btncreate" onclick="return validateCreate()" style="width:160px; background-color:#17aa67" value="Create" />



                </div>
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name List</th>
                        <th>Describe</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.sklist)
                    {
                        <tr>

                            <td>@item.CateName</td>
                            <td>@item.Description</td>

                        </tr>
                    }

                </tbody>
            </table>
            <div class="text_right_author">

            </div>
        </div>
    </form>
</form>
